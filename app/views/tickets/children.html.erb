<p id="notice"><%= notice %></p>

<h2><a href="<%= incident_path(@ticket.incident) %>"><%= @ticket.incident %></a> > <%= @ticket.name %> > Child Tickets</h2>

<%= render 'nav' %>

<% if @ticket.children.empty? %>
  No child tickets
  <br /><br />
  To create a child ticket, create a new ticket, edit it, and set its parent ticket to <b><%= @ticket.name %></b>.
  <br />
<% else %>
<table>
    <thead>
        <tr>
            <th>Name</th>
            <th>Incident</th>
            <th>Status</th>
            <th>Priority</th>
            <th>Is Lead?</th>
            <th>Created At</th>
            <th colspan="4"></th>
        </tr>
    </thead>

    <tbody>
        <% @ticket.children.each do |ticket| %>
            <tr>
                <td><%= ticket.name %></td>
                <td><%= ticket.incident %></td>
                <td><%= ticket.status %></td>
                <td><%= ticket.priority %></td>
                <td><%= ticket.is_lead %></td>
                <td><%= ticket.created_at %></td>
                <td><%= link_to 'Show', ticket %></td>
                <td><%= link_to 'Tree', tree_ticket_path(ticket) %></td>
                <td><%= link_to 'Edit', edit_ticket_path(ticket) %></td>
                <td><%= link_to 'Destroy', ticket, method: :delete, data: { confirm: 'Are you sure?' } %></td>
            </tr>
        <% end %>
    </tbody>
</table>
<% end %>