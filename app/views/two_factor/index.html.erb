
<div class="page_grid">
    <%= render 'shared/settings_menu' %>
    <div>
        <h2 class="title is-4">2FA</h2>
        <% if @two_factor_enabled %>
            <p>2FA is <span style="color: green; font-weight: bold">enabled</span></p>
        <% else %>
                <p>2FA is <span style="color: red; font-weight: bold">disabled</span></p>
        <% end %>
    </div>
</div>

<style>
    .page_grid {
        display: grid;
        grid-template-columns: 13% 87%;
        grid-column-gap: 2%;
    }
</style>