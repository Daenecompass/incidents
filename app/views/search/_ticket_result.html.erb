<div class="result">
    <div>
        <a href="<%= ticket_path(result.searchable) %>" class="title is-5 result_title">
            <%= result.searchable.name %>
        </a>
        <span class="tag is-primary">Ticket</span>
    </div>
    <div>
        <% if result.respond_to?(:pg_search_highlight) %>
            <%= result.pg_search_highlight.html_safe %>
        <% else %>
            <%= result.content %>
        <% end %>
    </div>
</div>

<script>
    .result_title {
        display: inline-block;
        color: rgb(53, 118, 217);
    }

    .result {
        margin-bottom: 30px;
    }
</script>