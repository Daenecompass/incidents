<div class="incident_result">
    <div>
        <a href="<%= incident_path(result.searchable) %>" class="title is-5 incident_result_title">
            <%= result.searchable.name %>
        </a>
        <span class="tag is-info">Incident</span>
    </div>
    <div>
        <% if result.respond_to?(:pg_search_highlight) %>
            <%= result.pg_search_highlight.html_safe %>
        <% else %>
            <%= result.content %>
        <% end %>
    </div>
</div>

<style>
    .incident_result_title {
        display: inline-block;
        color: rgb(53, 118, 217);
    }

    .incident_result {
        margin-bottom: 30px;
    }
</style>