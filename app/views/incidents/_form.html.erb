<div style="width: 50%">
  <%= form_with(model: incident, local: true) do |form| %>
    <% if incident.errors.any? %>
      <div class="message is-danger">
        <div class="message-header">
          <h2><%= pluralize(incident.errors.count, "error") %> prohibited this incident from being saved:</h2>
        </div>
        <div class="message-body">
          <ul>
          <% incident.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
          </ul>
        </div>
      </div>
    <% end %>

    <div class="field">
      <%= form.label :name, "Name (Required)" %>
      <%= form.text_field :name, placeholder: "Detected Ryuk on an endpoint", autofocus: true %>
    </div>

    <fieldset disabled>
        <div class="field">
          <strong>Created At:</strong>
          <%= form.text_field :created_at %>
        </div>
    </div>

      <fieldset disabled>
          <div class="field">
              <%= form.label :created_by, "Created By" %>
              <div class="select">
                  <%= collection_select :incident, :user, User.where(id: @incident.user_id), :id, :username  %>
              </div>
          </div>
      </fieldset>


    <div class="field">
      <%= form.label :status, "Status (Required)" %>
      <div class="select">
        <%= form.select :status, Incident.statuses.keys.map { |w| [w.humanize, w] } %>
      </div>
    </div>

    <div class="field" style="width: 50%">
      <%= form.label :tag_list, "Tag List " %>
      <%= form.text_field :tag_list, value: form.object.tag_list.to_s, placeholder: "apt1, ryuk" %>
    </div>

    <div class="field" style="width: 50%">
      <%= form.label :description, "Description " %>
      <%= form.text_area :description, placeholder: "Enter description here" %>
    </div>

    <div class="actions">
      <%= form.button "Update", type: :submit %>
    </div>
  <% end %>
</div>