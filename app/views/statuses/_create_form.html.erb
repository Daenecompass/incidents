<%= form_with(model: status, local: true) do |form| %>
  <% if status.errors.any? %>
    <div class="message is-danger">
      <div class="message-header">
        <p><%= pluralize(status.errors.count, "error") %> prohibited this status from being saved:</p>
      </div>
      <div class="message-body">
        <ul>
        <% status.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
        </ul>
      </div>
    </div>
  <% end %>

  <div style="display: inline-block; width: 30%">
    <%= form.text_field :name, class: "input", placeholder: "In Progress" %>
  </div>
  <div style="display: inline-block">
    <%= form.button "Create Status", type: :submit, class: "button is-link" %>
  </div>
<% end %>