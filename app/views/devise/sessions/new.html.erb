<div style="display: flex; justify-content: center">
    <div style="width: 50%; padding: 5%; border-radius: 8px">
        <div style="text-align: center;">
            <%= image_tag("logo.png", :alt => "logo") %>
        </div>
        <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
            <div class="field">
                <%= f.label :login, class: "label", style: "color: white" %>
                <%= f.text_field :login, placeholder: "Username or email", class: "input" %>
            </div>

            <div class="field">
                <%= f.label :password, class: "label", style: "color: white" %>
                <%= f.password_field :password, autocomplete: "current-password", placeholder: "Password", class: "input" %>
            </div>

            <br>

            <div class="actions" style="display: flex; justify-content: center">
                <%= f.button "Log in", type: :submit, class: "button" %>
            </div>

            <br>

            <div>
                <a href="<%= new_user_password_path =%>" style="color: white">Forgot your password?</a>
            </div>
        <% end %>
    </div>
</div>

<style>
html, body {
    background-color: #3676d9;
}

.input, .input:focus {
    background-color: #3676d9;
    color: white;
    border: 1px solid white;
}

.input::placeholder {
    color: white;
}

.button {
    background-color: #3676d9;
    border: 1px solid white;
}
</style>